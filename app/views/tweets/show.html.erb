<h1>Tweets#show</h1>
<p>Find me in app/views/tweets/show.html.erb</p>

<p><span>email: </span><%= @tweet.user.email %></p>
<p><span>ツイート内容: </span><%= @tweet.body %></p>


<% @tweet.comments.each do |comment| %>
  <p><%= comment.body %></p>
<% end %>


<%= form_tag tweet_comments_path(@tweet.id) do %>
  <p>
    <%= text_field_tag :body %>
  </p>
  <%= submit_tag("Submit") %>
<% end %>
